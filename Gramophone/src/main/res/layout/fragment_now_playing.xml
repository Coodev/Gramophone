<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageButton
            android:id="@+id/nowPlayingAlbumArt_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_below="@id/action_bar"
            android:contentDescription="@string/album_cover"
            android:minHeight="150dp"
            android:background="@drawable/ic_launcher"/>

    <TextView
            android:id="@+id/nowPlayingTimePlayed_textView"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="0:00"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_alignBottom="@+id/nowPlaying_seekBar"
            android:layout_below="@+id/nowPlayingAlbumArt_imageView"/>

    <SeekBar
            android:id="@+id/nowPlaying_seekBar"
            android:layout_width="wrap_content"
            android:layout_below="@id/nowPlayingAlbumArt_imageView"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:layout_toRightOf="@id/nowPlayingTimePlayed_textView"
            android:layout_toLeftOf="@+id/nowPlayingTimeLeft_textView"/>


    <TextView
            android:id="@+id/nowPlayingTimeLeft_textView"
            android:layout_alignParentRight="true"
            android:layout_below="@id/nowPlayingAlbumArt_imageView"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="4:44"
            android:gravity="center_vertical"
            android:layout_marginRight="18dp"
            android:layout_alignBottom="@+id/nowPlaying_seekBar"/>


    <TextView
            android:id="@+id/nowPlayingTitle_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nowPlaying_seekBar"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="32sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"/>

    <TextView
            android:id="@+id/nowPlayingArtistAlbum_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_below="@id/nowPlayingTitle_textView"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="18sp"/>


</RelativeLayout>
