<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"                android:layout_width="match_parent"                android:layout_height="match_parent">    <TextView            android:id="@+id/metadataCategory_TextView"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="Sample category"            android:paddingLeft="16dp"            android:layout_toLeftOf="@+id/metadataEdit_Button"            android:gravity="center_vertical"            android:textSize="24sp"            android:paddingBottom="16dp"            android:paddingTop="16dp"/>    <Button            android:id="@+id/metadataEdit_Button"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_marginTop="8dp"            android:layout_marginRight="16dp"            android:layout_alignTop="@id/metadataCategory_TextView"            android:layout_marginBottom="8dp"            android:text="@string/edit_metadata"/></RelativeLayout>